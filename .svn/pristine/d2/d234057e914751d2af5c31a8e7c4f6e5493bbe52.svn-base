<?php

namespace App\Http\Controllers\Master;

use App\Order;
use Illuminate\Http\Request;
use App\Http\Controllers\Controller;
use Milon\Barcode\DNS1D;

class PrintController extends Controller
{
    public function index(){
        $print_template = [
            1=>['name'=>'模板1'],
            2=>['name'=>'模板2'],
            //3=>['name'=>'模板3'],
        ];
        return view('master.print.index',['print_template'=>$print_template]);
    }

    public function show(Request $request){
        $id = intval($request->get('id'));
        $info = Order::find(1);
        $info['products'] = $info->productData;
        foreach ($info['products'] as $key=>$val){
            $val['category_one'] = $val->categoryOne->name;
            $val['category_two'] = $val->categoryTwo->name;
            $info['products'][$key] = $val;
        }
        $barcode =  DNS1D::getBarcodePNG($info->system_order_no, "C128",2,100);

        $pdf = new \TCPDF();
        // 设置文档信息
        $pdf->SetCreator('wedepot');
        $pdf->SetAuthor('wedepot');
        $pdf->SetTitle('导出');
        $pdf->SetSubject('导出');
        $pdf->SetKeywords('TCPDF, PDF, PHP');

        // 设置默认等宽字体
        $pdf->SetDefaultMonospacedFont('courier');

        // 设置图像比例因子
        $pdf->setImageScale(1.50);

        // 设置间距
        $pdf->SetMargins(15, 15, 15);//页面间隔
        $pdf->SetHeaderMargin(5);//页眉top间隔
        $pdf->SetFooterMargin(10);//页脚bottom间隔

        // 设置分页
        $pdf->SetAutoPageBreak(true, 25);

        // set default font subsetting mode
        $pdf->setFontSubsetting(true);

        //设置字体 stsongstdlight支持中文
        $pdf->SetFont('stsongstdlight', '', 12);

        $pdf->AddPage();
        $html = view('master.print.template1',['data'=>$info,'barcode'=>$barcode])->render();
        $pdf->writeHTML($html);
        if ($request->get("a")){
            $pdf->Output('t.pdf', 'I');
        }else{
            return view('master.print.template1',['data'=>$info,'barcode'=>$barcode]);
        }

    }
}
