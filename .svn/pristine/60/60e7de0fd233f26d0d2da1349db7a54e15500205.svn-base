#banner{height: 193px;position: relative;z-index: 1;overflow: hidden;}
.banner-img{background-image: url('../images/register-banner.jpg'); background-position: center center; width: 100%;height: 100%;display: block;}
.banner-img .banner-content{font-size: 1.5rem;font-weight: bolder;    padding-top: 4rem;  line-height: 2.5rem;  }
.content{background: white;margin-bottom: 3rem;}
.content .content-titleimg{font-size: 0;color: white;}
.content .titlecontent{margin: 2rem 0 1rem 0;text-indent: 1rem;}
.content .titlecontent h1{color: orange;font-size: 1.7rem;}
.content .titlecontent .main{font-size: 1rem;margin: 0.5rem 0;}
.content .titlecontent .bottom{font-size: 0.8rem;}
.content .upload-img{background: #eeeeee;color: #cfcfcf;border: 2px solid #bebebe;margin: 0 auto;width: 250px;height: 250px;position: relative;}
.content .upload-img i{font-size: 6rem;line-height: 10rem;}
.content .upload-img img{height:250px;width:250px;}
.content .upload-img .file{opacity: 0;width: 250px;height: 250px;position: absolute;top: 0;right: 0;cursor: pointer;}
.content .text-center{text-align: center;}
.content .upload-img-content{margin: 1rem auto;font-size: 1rem;}
.content .sq{background: #efefef;    padding: 1rem;  width: 94%;  margin: 0 auto;}
.step{padding-top: 4rem;width: 190px;position: relative;    text-align: center;}
.step img{width: 190px;}
.step .title-header{font-size: 1.5rem;  position: absolute;  top: 4.8rem;  left: 5.6rem;}
.step .title-footer{font-size: 1rem;color: #c9c9c9;line-height: 2rem;font-weight: bolder;}
.step .active{color: #0060ff;}
.form{width: 42%;text-align: center;font-size: 0.8rem;margin: 5rem auto 0 auto;color: black;padding-bottom: 3rem;}
.form .layui-form-label i{color: red;}
.sub-btn{margin-top: 2rem;}
.layui-form-label{width: 90px;}
.layui-input, .layui-select, .layui-textarea{height: 22px;}
.layui-form-label{padding: 2px 15px;}
.form input{width: 95%;}
.form .captcha{text-align: left;}
.form .sub-btn{width: 14rem;}
.form .captcha a {color: red;font-size: 1rem;}
.form .captcha a:hover {color: #09F;}
.form .agree-link{margin-top: 10px;}
.form .emailverify-content{text-align: left;font-size: 0.9rem;margin-bottom: 2rem;}
.form .email-resend{margin: 0 0 0.5rem 1rem;}
.form .text-left{text-align: left;}
.form .weak {background: #FF0000;width: 32%;margin-right: 0;margin-bottom: 5px;float: left;}
.form .medium {background: #FF9900;width: 32%;margin-right: 0;margin-bottom: 5px;float: left;}
.form .strong {background: #33CC00;width: 32%;margin-right: 0;margin-bottom: 5px;float: left;}
.form .pwd-default {background: #eeeeee;width: 32%;margin-right: 0;margin-bottom: 5px;float: left;}